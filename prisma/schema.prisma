generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String  
  description String
  img         String[]  
}
 

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  author      String
  title       String
  description String 
  img         String[]
  date        DateTime @default(now()) @db.Date 
}

  
 
 


model Order {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String 
  email String 
  phone String 
  location String 
  subject String 
  message String  
  date        String?
}
 

 