generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  img         String[]
  sections    Section[]
}

type Section {
  id          String
  title       String
  description String
  img         String[]
}




model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  author      String
  title       String
  description String 
  img         String[]
  date        DateTime @default(now()) @db.Date 
}

  
 
 


model Order {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String 
  email String 
  phone String 
  location String 
  subject String 
  message String  
  date        String?
}
 



model Work {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  data Json
}

 


 model Banner {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String 
  description String 
  img         String[]
}

 model About {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String 
  img         String[]
}
 model Look {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String 
  img         String[]
}
 model Why {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String 
  data Json
}


 model Hwork {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String  
  data Json
}


model AvailableDate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  createdAt DateTime @default(now())
}


model Appointment {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  info       Json  
}
